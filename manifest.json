{
    "manifest_version": 3,
    "name": "Network Speed Overlay",
    "version": "1.0",
    "description": "Shows current network speed as an overlay.",
    "permissions": ["scripting", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["overlay.css"]
      }
    ]
  }
  