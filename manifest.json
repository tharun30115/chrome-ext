{
    "manifest_version": 3,
    "name": "Network Speed Overlay",
    "version": "1.0",
    "description": "Shows current network speed as an overlay.",
    "permissions": ["webRequest", "webRequestBlocking", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["overlay.css"]
      }
    ],
    "icons": {
      "48": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  